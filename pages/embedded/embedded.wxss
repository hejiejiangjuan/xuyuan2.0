.myCanvas{
  /* border: 1px solid black; */
  display: flex;
  justify-content: center;
  padding: 30rpx;
  background: white;
}
#myCanvas{
  /* border: 1px solid red; */
}
.canvasBtn{
  display: flex;
  justify-content: center;
  padding: 30rpx 40rpx 60rpx 40rpx;
  background: white;

}
.canvas-btn{
  border: 1px solid #FF3C75;
  width: 100%;
  text-align: center;
  font-size:36rpx;
  color: #FF3C75;
  border-radius: 25px;
  padding: 20rpx 0; 
}
.copyBox{
  display: flex;
  flex-direction: column;
  align-items: center;
  /* border: 1px solid black; */
  background: white;
  margin-top: 20rpx;
  padding: 20rpx 0; 
}
.copyCon{
  width: 90%;
  border-radius: 3px;
}
.copyApp{
  display: flex;
  justify-content: space-between;
  /* padding: 0 30rpx; */
  height: 100rpx;
  align-items: center;
  font-size: 28rpx;
}
.copyApp>text:nth-child(1){
  font-weight: bold;
  /* border: 1px solid black; */
  width: 138rpx;
  display: block;
  
}
.copyApp>text:nth-child(2){
  background:  #FAFAFA ;
  padding: 10rpx 25rpx;
  color: #bbbbbb;
  font-weight: 500;
  width: 50%;
}

.copyBtn{
  box-shadow: 0 0 1px #bbbbbb;
  text-align: center;
  width: 15%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333333;

}
.copyLink{
  overflow: hidden;
  text-overflow:ellipsis;
white-space: nowrap;
/* width: 70% */
}
.publicText{
  text-align: center;
  color: #2F7BD1;
  padding: 50rpx 0 100rpx 0;
}